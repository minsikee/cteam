<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Petbar_Add"
    android:orientation="vertical"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="2020.08.03"
        android:textColor="#FFF"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:background="@drawable/baraddstroke"

        >

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#96A4F3"
            android:gravity="center"
            android:text="NOTE"
            android:textSize="20dp"
            android:textColor="#FFF"/>

        <EditText
            android:id="@+id/baradd_memo"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/baraddstroke"
        >

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="아이콘"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:background="#5D73ED"
            />

        <Button
            android:id="@+id/baradd_icon"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical" />

    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       android:background="@drawable/baraddstroke"
       >

       <TextView
           android:layout_width="80dp"
           android:layout_height="match_parent"
           android:layout_marginRight="20dp"
           android:gravity="center"
           android:text="시간"
           android:textSize="20dp"
           android:textColor="#FFF"
           android:background="#96A4F3"/>

       <TextView
           android:id="@+id/baraddTime"
           android:layout_width="100dp"
           android:layout_height="match_parent"
           android:layout_gravity="center"
           android:gravity="center_horizontal|center_vertical"
           android:text="8시"
           android:textSize="20dp" />

       <NumberPicker
           android:id="@+id/petbarPicker"
           android:layout_width="100dp"
           android:layout_height="match_parent"
           android:layout_gravity="center" />
       <TextView
           android:id="@+id/baraddTime"
           android:layout_width="100dp"
           android:layout_height="match_parent"
           android:layout_gravity="center"
           android:gravity="center_horizontal|center_vertical"
           android:text="분"
           android:textSize="20dp" />


   </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
         android:background="@drawable/baraddstroke">

         <TextView
             android:layout_width="80dp"
             android:layout_height="match_parent"
             android:gravity="center"
             android:text="알람"
             android:textSize="20dp"
             android:textColor="#FFF"
             android:background="#5D73ED"/>

         <Button
             android:id="@+id/petadd_Alarm"
             android:layout_width="290dp"
             android:layout_height="50dp"
             android:layout_marginLeft="20dp"
             android:backgroundTint="#A2BACA"
             android:text="Alarm"
             android:textColor="#FFF"
             android:textSize="20dp" />
     </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="#FAF6F6">

        <Button
            android:id="@+id/baradd_ok"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/check"
            android:backgroundTint="#5D73ED" />

        <Button
            android:id="@+id/baradd_cancel"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/cancel_32"
            android:backgroundTint="#F80457" />
    </LinearLayout>
</LinearLayout>
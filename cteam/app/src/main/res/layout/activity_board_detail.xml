<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    tools:context=".board.BoardDetail">

    <LinearLayout
        android:id="@+id/baoard_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:weightSum="10"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_weight="2.5">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/board_detail_writer_img"
                android:layout_width="56dp"
                android:layout_height="42dp"
                android:layout_below="@+id/board_detail_title"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/dog"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="2dp" />


            <TextView
                android:id="@+id/board_detail_id"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/board_detail_title"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_toEndOf="@+id/board_detail_writer_img"
                android:layout_toRightOf="@+id/board_detail_writer_img"
                android:text="아이디" />

            <TextView
                android:id="@+id/board_detail_date"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="0dp"
                android:textSize="12sp"
                android:layout_toEndOf="@+id/board_detail_writer_img"
                android:layout_toRightOf="@+id/board_detail_writer_img"
                android:text="등록시간" />

            <TextView
                android:id="@+id/board_detail_city"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="0dp"
                android:textSize="12sp"
                android:layout_toEndOf="@+id/board_detail_date"
                android:layout_toRightOf="@+id/board_detail_date"
                android:text="도시" />

            <TextView
                android:id="@+id/board_detail_region"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="0dp"
                android:textSize="12sp"
                android:layout_toEndOf="@+id/board_detail_city"
                android:layout_toRightOf="@+id/board_detail_city"
                android:text="지역" />

            <TextView
                android:id="@+id/board_detail_title"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="-2dp"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:text="글 제목"
                android:textColor="#000000"
                android:textSize="25sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/boardContent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="7.5"
            android:orientation="vertical"
            android:background="#FDE7FC">

            <ImageView
                android:id="@+id/board_detail_image"
                android:layout_width="130dp"
                android:layout_height="207dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/catbody" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="250dp"
                android:layout_height="252dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/board_detail_image"
                android:layout_toRightOf="@+id/board_detail_image">

                <FrameLayout
                    android:layout_width="245dp"
                    android:layout_height="250dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp">


                    <TextView
                        android:id="@+id/board_detail_content"
                        android:layout_width="222dp"
                        android:layout_height="212dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="14dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="20dp"
                        android:layout_toEndOf="@+id/board_detail_image"
                        android:layout_toRightOf="@+id/board_detail_image"
                        android:background="#FFFFFF"
                        android:text="내용" />

                </FrameLayout>
            </androidx.core.widget.NestedScrollView>
        </RelativeLayout>

        <TextView
            android:id="@+id/comment_bar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/shadow"
            android:text="댓글목록"
            android:textStyle="bold"
            android:shadowColor="@color/daysLabelColor"
            android:gravity="center"/>


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/board_detail_comment"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_weight="8" />

    <RelativeLayout
        android:id="@+id/commentText"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_weight="2"
        android:background="#E8E6EC"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/board_detail_comment_img"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            tools:src="@tools:sample/avatars" />

        <EditText
            android:id="@+id/board_detail_comment_write"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_toEndOf="@+id/board_detail_comment_img"
            android:layout_toRightOf="@+id/board_detail_comment_img"
            android:gravity="center_vertical"
            android:background="#FDFDFD"
            android:hint="  댓글을 작성하세요" />

        <Button
            android:id="@+id/board_detail_comment_submit"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/profile_btn"
            android:layout_toEndOf="@+id/board_detail_comment_write"
            android:layout_toRightOf="@+id/board_detail_comment_write"
            android:text="등 록"
            android:textColor="#000000"
            android:textSize="18dp"/>
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetPhoto">

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="666dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:numColumns="3" />

    <ImageButton
        android:id="@+id/photoPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_toStartOf="@+id/photoMinus"
        android:layout_toLeftOf="@+id/photoMinus"
        android:src="@drawable/map_plus" />

    <ImageButton
        android:id="@+id/photoMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/map_minus" />

</RelativeLayout>
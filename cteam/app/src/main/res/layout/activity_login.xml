<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/main_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메인진입" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/login_img1"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/ic_launcher_round" />

        <EditText
            android:id="@+id/login_id"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/login_img1"
            android:layout_alignLeft="@id/login_img1"
            android:layout_marginTop="25dp"
            android:background="@drawable/text_stroke"
            android:drawableLeft="@drawable/image_medi"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColorHint="#3F51B5"
            android:textSize="14sp"
            android:hint="아이디를 입력하세요"/>

        <EditText
            android:id="@+id/login_pw"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/login_id"
            android:layout_alignLeft="@id/login_img1"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_stroke"
            android:drawableLeft="@drawable/image_medi"
            android:ems="10"
            android:inputType="textPassword"
            android:textColorHint="#3F51B5"
            android:textSize="14sp"
            android:hint="비밀번호를 입력하세요"/>

        <Button
            android:id="@+id/login_btn1"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/login_pw"
            android:layout_alignLeft="@+id/login_img1"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_stroke"
            android:shadowColor="@android:color/transparent"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:text="로그인하기"/>

        <Button
            android:id="@+id/login_btn2"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@+id/login_btn1"
            android:layout_alignLeft="@+id/login_img1"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_stroke"
            android:shadowColor="@android:color/transparent"
            android:textColor="#3F51B5"
            android:textSize="16sp"
            android:text="비밀번호찾기"/>

        <Button
            android:id="@+id/login_btn3"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@+id/login_btn1"
            android:layout_alignRight="@+id/login_img1"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_stroke"
            android:shadowColor="@android:color/transparent"
            android:textColor="#3F51B5"
            android:textSize="16sp"
            android:text="회원가입"/>

    </RelativeLayout>

</LinearLayout>
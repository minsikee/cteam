<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <EditText
            android:id="@+id/PasswordModify_pw"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/text_stroke"
            android:drawableLeft="@drawable/image_medi"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:hint="새 비밀번호를 입력하세요" />

        <EditText
            android:id="@+id/PasswordModify_pw_confirm"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/PasswordModify_pw"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_stroke"
            android:drawableLeft="@drawable/image_medi"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:hint="새 비밀번호를 확인하세요" />

        <Button
            android:id="@+id/PasswordModify_cancel"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_below="@+id/PasswordModify_pw_confirm"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_stroke"
            android:shadowColor="@android:color/transparent"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:text="취소" />

        <Button
            android:id="@+id/PasswordModify_ok"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@+id/PasswordModify_pw_confirm"
            android:layout_toRightOf="@id/PasswordModify_cancel"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_stroke"
            android:shadowColor="@android:color/transparent"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:text="비밀번호 변경하기" />

    </RelativeLayout>

</LinearLayout>